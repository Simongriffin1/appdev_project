<h1 class="page-title">Today's question</h1>

<div class="card">
  <h2 class="card__title">Question</h2>
  <p><%= @prompt.body %></p>
</div>

<div class="card" style="margin-top: 1rem;">
  <h2 class="card__title">Your response</h2>
  <p class="card__subtitle">Write freely. The AI will summarize and tag this automatically once you save.</p>

  <% if @journal_entry.errors.any? %>
    <div class="flash flash--alert">
      <% @journal_entry.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @journal_entry, url: journal_entries_path do |f| %>
    <%= f.hidden_field :prompt_id, value: @prompt.id %>

    <div class="form-field">
      <%= f.label :body, "What comes up for you as you sit with this question?" %>
      <%= f.text_area :body, required: true %>
    </div>

    <div class="btn-row">
      <%= f.submit "Save entry", class: "btn btn-primary" %>
      <%= link_to "Back to dashboard", dashboard_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
