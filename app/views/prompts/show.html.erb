<h1>Prompt</h1>

<div style="padding: 15px; border: 1px solid #ccc; margin-bottom: 20px; background: #f9f9f9;">
  <p style="font-size: 1.3em; margin: 0;"><%= @prompt.body %></p>
</div>

<h2>Write Your Response</h2>

<% if @journal_entry.errors.any? %>
  <div style="padding: 10px; background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; margin-bottom: 15px;">
    <ul style="margin: 0; padding-left: 20px;">
      <% @journal_entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @journal_entry, url: journal_entries_path do |f| %>
  <%= f.hidden_field :prompt_id, value: @prompt.id %>

  <div style="margin-bottom: 15px;">
    <%= f.label :body, "Write anything that comes to mind:" %><br>
    <%= f.text_area :body, rows: 6, style: "width: 100%; max-width: 600px;", required: true %>
  </div>

  <div>
    <%= f.submit "Save entry", style: "padding: 8px 15px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>

<p style="margin-top: 20px;">
  <%= link_to "Back to Dashboard", dashboard_path %>
</p>
