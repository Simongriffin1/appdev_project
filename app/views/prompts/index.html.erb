<h1 class="page-title">All Prompts</h1>

<div class="card">
  <% if @prompts.any? %>
    <ul class="entry-list">
      <% @prompts.each do |prompt| %>
        <li class="entry-list__item">
          <div class="entry-meta">
            <%= prompt.created_at.strftime("%b %-d, %Y") %>
            <span class="muted">(<%= prompt.source %>)</span>
          </div>

          <div class="entry-body">
            <%= prompt.body %>
          </div>

          <div class="btn-row" style="margin-top: 0.4rem;">
            <%= link_to "View", prompt_path(prompt), class: "btn btn-ghost" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="muted">No prompts yet.</p>
  <% end %>

  <div class="btn-row" style="margin-top: 1rem;">
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-ghost" %>
  </div>
</div>
