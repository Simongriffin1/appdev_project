<h1>All Prompts</h1>

<% if @prompts.any? %>
  <ul style="list-style: none; padding: 0;">
    <% @prompts.each do |prompt| %>
      <li style="padding: 15px; margin-bottom: 15px; border: 1px solid #ddd;">
        <div style="margin-bottom: 10px;">
          <strong><%= prompt.created_at.to_date %></strong>
          <span style="color: #666;">(<%= prompt.source %>)</span>
        </div>
        <div style="margin: 10px 0;">
          <%= prompt.body %>
        </div>
        <div>
          <%= link_to "View", prompt_path(prompt) %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No prompts yet.</p>
<% end %>

<p style="margin-top: 20px;">
  <%= link_to "Back to Dashboard", dashboard_path %>
</p>
