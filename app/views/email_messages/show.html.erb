<h1>Email Message</h1>

<div style="margin-bottom: 20px;">
  <strong>Direction:</strong> <%= @email_message.direction %><br>
  <strong>Subject:</strong> <%= @email_message.subject || "(No subject)" %><br>
  <strong>Date:</strong> <%= @email_message.sent_or_received_at || @email_message.created_at %>
</div>

<div style="padding: 15px; border: 1px solid #ccc;">
  <strong>Body:</strong>
  <p style="white-space: pre-wrap; margin: 10px 0 0 0;"><%= @email_message.body %></p>
</div>

<% if @email_message.prompt %>
  <div style="margin-top: 15px;">
    <strong>Related Prompt:</strong>
    <%= link_to @email_message.prompt.body.truncate(50), prompt_path(@email_message.prompt) %>
  </div>
<% end %>

<% if @email_message.journal_entry %>
  <div style="margin-top: 15px;">
    <strong>Related Entry:</strong>
    <%= link_to "View Entry", journal_entry_path(@email_message.journal_entry) %>
  </div>
<% end %>

<p style="margin-top: 20px;">
  <%= link_to "Back to Email Messages", email_messages_path %> |
  <%= link_to "Dashboard", dashboard_path %>
</p>
