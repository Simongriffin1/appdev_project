<h1>Sign In</h1>

<% if flash[:alert] %>
  <div style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: sign_in_path, method: :post do |f| %>
  <div>
    <%= f.label :email, "Email" %><br>
    <%= f.email_field :email, required: true, autofocus: true %>
  </div>

  <div>
    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Sign In" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Sign up", new_user_path %>
</p>
