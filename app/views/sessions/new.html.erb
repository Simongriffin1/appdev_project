<div class="card auth-card">
  <h1 class="page-title">Sign in</h1>

  <% if flash[:alert] %>
    <div class="flash flash--alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: sign_in_path, method: :post do |f| %>
    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autofocus: true %>
    </div>

    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="btn-row">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
      <%= link_to "Sign up", new_user_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
