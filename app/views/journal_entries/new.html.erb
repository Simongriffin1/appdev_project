<h1 class="page-title">New Journal Entry</h1>

<div class="card">
  <% if @journal_entry.errors.any? %>
    <div class="flash flash--alert">
      <% @journal_entry.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @journal_entry, url: journal_entries_path do |f| %>
    <%= f.hidden_field :prompt_id if @journal_entry.prompt_id.present? %>

    <div class="form-field">
      <%= f.label :body, "Write your entry:" %>
      <%= f.text_area :body, required: true %>
    </div>

    <div class="btn-row">
      <%= f.submit "Save entry", class: "btn btn-primary" %>
      <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
