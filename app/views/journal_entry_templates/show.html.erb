<h1>
  Journal entry #<%= @the_journal_entry.id %> details
</h1>

<article>
  <div>
    <a href="/journal_entries">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_journal_entry/<%= @the_journal_entry.id %>">
      Delete journal entry
    </a>
  </div>
  <dl>
    <dt>
      User
    </dt>
    <dd>
      <%= @the_journal_entry.user_id %>
    </dd>

    <dt>
      Prompt
    </dt>
    <dd>
      <%= @the_journal_entry.prompt_id %>
    </dd>

    <dt>
      Body
    </dt>
    <dd>
      <%= @the_journal_entry.body %>
    </dd>

    <dt>
      Source
    </dt>
    <dd>
      <%= @the_journal_entry.source %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_journal_entry.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_journal_entry.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit journal entry
    </h2>
  </header>

  <form action="/modify_journal_entry/<%= @the_journal_entry.id %>"  method="post" >
    <div>
      <label for="user_id_box">
        User
      </label>

      <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_journal_entry.user_id %>">
    </div>

    <div>
      <label for="prompt_id_box">
        Prompt
      </label>

      <input type="text" id="prompt_id_box" name="query_prompt_id" value="<%= @the_journal_entry.prompt_id %>">
    </div>

    <div>
      <label for="body_box">
        Body
      </label>

      <input type="text" id="body_box" name="query_body" value="<%= @the_journal_entry.body %>">
    </div>

    <div>
      <label for="source_box">
        Source
      </label>

      <input type="text" id="source_box" name="query_source" value="<%= @the_journal_entry.source %>">
    </div>

    <button type="submit">
      Update journal entry
    </button>
  </form>
</article>

<hr>
